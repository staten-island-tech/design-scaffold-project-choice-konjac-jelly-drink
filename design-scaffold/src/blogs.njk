<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.style.css">
</head>
<body>  
    {% include 'nav.njk' %}
    <section class="section-container">
        <ul class="articles">
            {%- for post in collections.post -%}
                <article class="article">
                    <div class="article.text"> 
                        <h3 class="article-info">{{post.data.info}}</h3>
                        <h4 class="article-price">{{post.data.price}}</h4>
                        <h4 class="article-arthur">By {{post.data.arthur}} </h4>
                        <a class="article.link" href="{{post.url}}">Continue reading</a>
                    </div>
                    <img src="{{post.data.image}}" alt="" class="img-preview">
                </article>

                <article class="article-2">
                    <div class="article.text"> 
                        <h3 class="article-title">{{post.data.title}}</h3>
                        <h4 class="article-price">{{post.data.price}}</h4>
                        <h4 class="article-info">By {{post.data.info}} </h4>
                        <a class="article.link" href="{{post.url}}">Continue reading</a>
                    </div>
                    <img src="{{post.data.image}}" alt="" class="img-preview">
                </article>

                <article class="article-3">
                    <div class="article.text"> 
                        <h3 class="article-title">{{post.data.title}}</h3>
                        <h4 class="article-price">{{post.data.price}}</h4>
                        <h4 class="article-info">By {{post.data.info}}</h4>
                        <a class="article.link" href="{{post.url}}">Continue reading</a>
                    </div>
                    <img src="{{post.data.image}}" alt="" class="img-preview">
                </article>

            {%- endfor -%}
        </ul>
    </section>
    
</body>
    
</html>
